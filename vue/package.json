{
  "name": "pomelo-lib-vue",
  "version": "0.0.2-beta.12",
  "private": false,
  "description": "Pomelo Vue Component Library",
  "main": "./dist/pomelo-lib.common.js",
  "browser": "./dist/pomelo-lib.esm.js",
  "module": "./dist/pomelo-lib.esm.js",
  "unpkg": "./dist/pomelo-lib.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue",
    "src/**/*.less",
    "src/functions/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chinanwu/pomelo-lib"
  },
  "author": "Chin-An (Salmon) Wu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chinanwu/pomelo-lib"
  },
  "keywords": [
    "Vue",
    "components",
    "pomelo"
  ],
  "scripts": {
    "serve": "vue-cli-service serve ./demo/main.js",
    "build": "vue-cli-service build",
    "build-demo": "rm -r dist && vue-cli-service build ./demo/main.js",
    "build-lib": "vue-cli-service build --target lib --name pomelo-lib src/main.js",
    "build-publish-lib": "npm run build-lib && npm publish",
    "publish": "npm publish",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "jest": "^24.9.0",
    "vue": "^3.0.0-0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^2.0.0-beta.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "prettier": "^1.19.1",
    "typescript": "^4.0.3",
    "vue-jest": "^5.0.0-alpha.4"
  },
  "config": {
    "unsafe-perm":true
  }
}
